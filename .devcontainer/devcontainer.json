// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/rust
{
	"name": "Rust & Node",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/rust:1-1-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/node:1": "1.6.3"
	},
	// Use 'mounts' to make the cargo cache persistent in a Docker Volume.
	// "mounts": [
	// 	{
	// 		"source": "devcontainer-cargo-cache-${devcontainerId}",
	// 		"target": "/usr/local/cargo",
	// 		"type": "volume"
	// 	}
	// ]
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": {
		"display_tools": "sudo apt update && sudo apt install -y xauth x11-apps mesa-utils libgl1-mesa-glx libxkbcommon-x11-0 libxkbcommon-dev",
		"install_wasm_toolchain": "rustup target add wasm32-unknown-unknown && cargo install wasm-bindgen-cli --version 0.2.104"
	},
	"remoteEnv": {
		"WAYLAND_DISPLAY": "",
		"XDG_RUNTIME_DIR": "/run/user/$(id -u)",
		"LIBGL_ALWAYS_SOFTWARE": "1"
	},
	// Configure tool-specific properties.
	// "customizations": {},
	"postStartCommand": {}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
}